#!/usr/bin/env node
'use strict';

const NewApplication = require('../lib/newApplication');
const Helper = require('../lib/helper');
const app = new NewApplication();

const args = process.argv.slice(2);

main(args);

function main(params) {
  switch (params.shift()) {
    case 'new':
      app.setUp(params);
      break;
    case 'help':
    case '-h':
    case '--help':
      Helper.showHelp();
      break;
    case 'version':
    case '-v':
    case '--version':
      Helper.showVersion();
      break;
    default:
      Helper.showHelp();
  }
}
